{
  "manifest_version": 3,
  "name": "Media Procurement Collector",
  "version": "1.0.0",
  "description": "Automated media procurement opportunity collection from international development organizations",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "cookies"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/human-behavior.js",
        "utils/scraper-utils.js",
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Media Procurement Collector",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["config/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

