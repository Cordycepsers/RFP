# Proposaland Production Environment Variables
# Copy to .env in production environment
# DO NOT COMMIT THIS FILE WITH REAL VALUES

# Application config
APP_NAME=Proposaland Opportunity Monitoring System
APP_VERSION=1.0.0
TIMEZONE=UTC
LOG_LEVEL=INFO

# Email Configuration (REQUIRED)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SENDER_EMAIL=your-sender-email@example.com
SENDER_PASSWORD=your-app-password
RECIPIENT_EMAIL=notifications@example.com
EMAIL_SUBJECT_PREFIX=[Proposaland]

# Security (REQUIRED)
SECRET_KEY=replace-with-secure-32-char-random-string
ENCRYPTION_KEY=replace-with-secure-32-char-random-string
JWT_SECRET=replace-with-secure-32-char-random-string

# Paths
LOG_FILE_PATH=/var/log/proposaland/app.log
OUTPUT_DIRECTORY=/app/output
LOCAL_STORAGE_PATH=/app/data

# External APIs (REQUIRED)
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}
GOOGLE_SHEETS_ID=your-google-sheet-id
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# System Limits
MAX_CONCURRENT_SCRAPERS=3
GLOBAL_TIMEOUT=60
RETRY_ATTEMPTS=3
RETRY_DELAY=5
PERFORMANCE_MAX_WORKERS=3
PERFORMANCE_MEMORY_LIMIT=1GB

# Scheduling
SCHEDULING_ENABLED=true
DAILY_RUN_TIME=06:00
MAX_EXECUTION_TIME=7200
OVERLAP_PREVENTION=true
FAILURE_RETRY_INTERVAL=3600

# Feature Flags
FEATURE_ADVANCED_SCRAPERS=true
FEATURE_AI_SCORING=false
FEATURE_REALTIME_NOTIFICATIONS=true
FEATURE_DATA_EXPORT=true
FEATURE_ADMIN_DASHBOARD=true
FEATURE_WEBHOOK_INTEGRATION=false

# Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_PORT=8080
METRICS_ENABLED=true
METRICS_PORT=9090
PERFORMANCE_TRACKING=true

# Database (if using)
DATABASE_URL=postgresql://user:pass@host:port/dbname
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
