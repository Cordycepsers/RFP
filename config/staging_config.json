{
  "system": {
    "name": "Proposaland Staging Environment",
    "version": "1.0.0",
    "environment": "staging",
    "timezone": "UTC",
    "log_level": "DEBUG",
    "max_concurrent_scrapers": 2,
    "global_timeout": 45,
    "retry_attempts": 2,
    "retry_delay": 3
  },
  
  "scheduling": {
    "enabled": true,
    "daily_run_time": "08:00",
    "timezone": "UTC",
    "max_execution_time": 3600,
    "overlap_prevention": true,
    "failure_retry_interval": 1800
  },
  
  "email": {
    "enabled": true,
    "smtp_server": "smtp.gmail.com",
    "smtp_port": 587,
    "use_tls": true,
    "sender_email": "maja@whattookyousolong.org",
    "sender_password": "gppe qffv yuhu yubf",
    "recipient_email": "majakis@gmail.com",
    "subject_prefix": "[Proposaland-STAGING]",
    "send_daily_summary": true,
    "send_on_errors": true,
    "send_on_high_priority": false,
    "max_opportunities_per_email": 20
  },
  
  "scrapers": {
    "devex": {
      "enabled": true,
      "priority": 1,
      "request_delay": 2,
      "max_jobs": 20,
      "max_news": 10,
      "timeout": 30,
      "max_retries": 2
    },
    "undp": {
      "enabled": true,
      "priority": 1,
      "request_delay": 2,
      "max_pages": 3,
      "timeout": 25,
      "max_retries": 2
    },
    "ungm": {
      "enabled": false,
      "priority": 3,
      "request_delay": 5,
      "max_opportunities": 20,
      "timeout": 45,
      "max_retries": 1
    },
    "globalfund": {
      "enabled": true,
      "priority": 2,
      "request_delay": 3,
      "max_pages": 2,
      "timeout": 30,
      "max_retries": 2
    },
    "worldbank": {
      "enabled": true,
      "priority": 1,
      "request_delay": 2,
      "max_pages": 3,
      "timeout": 30,
      "max_retries": 2
    },
    "acted": {
      "enabled": true,
      "priority": 2,
      "request_delay": 2,
      "max_pages": 2,
      "timeout": 25,
      "max_retries": 2
    },
    "birdlife": {
      "enabled": true,
      "priority": 3,
      "request_delay": 2,
      "max_jobs": 10,
      "timeout": 20,
      "max_retries": 2
    }
  },
  
  "keywords": {
    "primary": [
      "video", "multimedia", "design", "campaign", "communication"
    ],
    "secondary": [
      "outreach", "engagement", "awareness"
    ],
    "exclusions": [
      "construction", "engineering", "medical equipment"
    ]
  },
  
  "output": {
    "excel": {
      "enabled": true,
      "filename_template": "staging_opportunities_{date}.xlsx"
    },
    "json": {
      "enabled": true,
      "filename_template": "staging_data_{date}.json"
    },
    "directory": "./output/staging"
  },
  
  "performance": {
    "cache_enabled": true,
    "cache_duration": 1800,
    "parallel_processing": true,
    "max_workers": 2,
    "memory_limit": "512MB"
  }
}

